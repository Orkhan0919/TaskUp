@model TaskUp.ViewModels.DashboardAccessVm

@{
    ViewData["Title"] = "Dashboard Access";
    Layout = "_LayoutMin";
}

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-950 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl w-full">
        <div class="text-center mb-10">
            <div class="flex justify-center">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-r from-blue-500 to-blue-700 flex items-center justify-center shadow-lg mb-4">
                    <i class="fas fa-tasks text-white text-2xl"></i>
                </div>
            </div>
            <h1 class="text-3xl font-bold text-white">TaskUp</h1>
            <p class="text-gray-400 mt-2">Project Management Dashboard</p>
        </div>

        <div class="bg-gray-900 rounded-3xl p-8 shadow-2xl border border-gray-800">
            <div class="mb-8">
                <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
                    <i class="fas fa-plus-circle text-blue-400 mr-3"></i>
                    Create New Dashboard
                </h2>

                <div class="grid md:grid-cols-2 gap-6">
                    <div onclick="selectBoardType('personal')"
                         class="group relative bg-gray-800/50 hover:bg-gray-800 rounded-2xl p-6 border-2 border-gray-700 hover:border-blue-500 transition-all duration-300 cursor-pointer">
                        <div class="absolute -top-3 -right-3 bg-blue-600 text-white px-3 py-1 rounded-full text-xs font-medium shadow-lg">
                            PERSONAL
                        </div>
                        <div class="flex flex-col items-center text-center">
                            <div class="w-16 h-16 rounded-full bg-blue-900/30 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                                <i class="fas fa-user text-3xl text-blue-400"></i>
                            </div>
                            <h3 class="text-lg font-bold text-white mb-2">Personal Board</h3>
                            <p class="text-gray-400 text-sm mb-4">
                                For individual tasks, personal projects, or solo work.
                                Only you can see and manage this board.
                            </p>
                            <div class="flex flex-wrap gap-2 justify-center text-xs text-gray-500">
                                <span class="px-2 py-1 bg-gray-700/50 rounded-full">ðŸ”’ Private</span>
                                <span class="px-2 py-1 bg-gray-700/50 rounded-full">ðŸ‘¤ Solo</span>
                                <span class="px-2 py-1 bg-gray-700/50 rounded-full">ðŸ“‹ Personal tasks</span>
                            </div>
                        </div>
                    </div>

                    <div onclick="selectBoardType('team')"
                         class="group relative bg-gray-800/50 hover:bg-gray-800 rounded-2xl p-6 border-2 border-gray-700 hover:border-purple-500 transition-all duration-300 cursor-pointer">
                        <div class="absolute -top-3 -right-3 bg-purple-600 text-white px-3 py-1 rounded-full text-xs font-medium shadow-lg">
                            TEAM
                        </div>
                        <div class="flex flex-col items-center text-center">
                            <div class="w-16 h-16 rounded-full bg-purple-900/30 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                                <i class="fas fa-users text-3xl text-purple-400"></i>
                            </div>
                            <h3 class="text-lg font-bold text-white mb-2">Team Board</h3>
                            <p class="text-gray-400 text-sm mb-4">
                                Collaborate with your team, invite members, assign tasks,
                                and manage projects together in real-time.
                            </p>
                            <div class="flex flex-wrap gap-2 justify-center text-xs text-gray-500">
                                <span class="px-2 py-1 bg-gray-700/50 rounded-full">ðŸ‘¥ Team</span>
                                <span class="px-2 py-1 bg-gray-700/50 rounded-full">ðŸ”— Invite links</span>
                                <span class="px-2 py-1 bg-gray-700/50 rounded-full">ðŸ“Š Collaboration</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="relative my-8">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-gray-800"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-4 bg-gray-900 text-gray-400">OR</span>
                </div>
            </div>

            <div>
                <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
                    <i class="fas fa-key text-green-400 mr-3"></i>
                    Join with Access Code
                </h2>

                <button id="joinBtn" 
                        class="w-full py-4 bg-gray-800 hover:bg-gray-700 rounded-xl text-lg font-medium text-gray-300 hover:text-white border-2 border-gray-700 hover:border-green-500 transition-all flex items-center justify-center group">
                    <i class="fas fa-sign-in-alt mr-3 text-green-400 group-hover:scale-110 transition-transform"></i>
                    Join Existing Dashboard
                </button>

                <div id="joinForm" class="hidden mt-6 p-6 bg-gray-800/50 rounded-xl">
                    <h3 class="text-lg font-semibold text-white mb-4">Enter 6-Digit Access Code</h3>
                    
                    <form id="joinDashboardForm" asp-action="JoinBoard" asp-controller="Dashboard" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="flex justify-center space-x-3 mb-6">
                            @for (int i = 0; i < 6; i++)
                            {
                                <input type="text" 
                                       maxlength="1" 
                                       class="w-12 h-14 text-center text-xl font-bold bg-gray-900 border-2 border-gray-700 rounded-xl text-white focus:border-green-500 focus:ring-2 focus:ring-green-500/20 transition-all code-digit"
                                       data-index="@i"
                                       name="codeDigits">
                            }
                        </div>

                        <input type="hidden" id="accessCode" name="AccessCode" value="" />

                        <div class="text-center mb-4">
                            <p id="codeDisplay" class="text-gray-400 text-sm font-mono">Entered Code: <span id="enteredCode">______</span></p>
                        </div>

                        <div id="passwordSection" class="@(Model?.RequiresPassword == true ? "" : "hidden") mt-4">
                            <label for="Password" class="block text-gray-300 text-sm font-medium mb-2">Dashboard Password</label>
                            <div class="relative">
                                <input type="password" 
                                       id="Password" 
                                       name="Password"
                                       class="w-full bg-gray-800 border border-gray-700 rounded-xl py-3 px-4 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent"
                                       placeholder="Enter password">
                                <button type="button" id="togglePassword" class="absolute right-4 top-3 text-gray-400 hover:text-white">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="flex space-x-4 mt-6">
                            <button type="button" id="backBtn" class="flex-1 py-3 bg-gray-700 hover:bg-gray-600 rounded-xl font-medium text-white transition-colors">
                                Back
                            </button>
                            <button type="submit" id="submitJoinBtn" class="flex-1 py-3 bg-green-600 hover:bg-green-700 rounded-xl font-medium text-white transition-colors">
                                Join Board
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        @if (Model?.ShowDemoInfo == true)
        {
            <div class="mt-8 text-center text-gray-500 text-sm">
                <p>Access codes are 6-character alphanumeric (e.g., A1B2C3)</p>
            </div>
        }
    </div>
</div>

<div id="boardTypeModal" class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 hidden">
    <div class="bg-gray-900 rounded-3xl p-8 w-full max-w-md mx-4 border border-gray-800 shadow-2xl">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-white" id="modalTitle">Create Board</h3>
            <button onclick="closeModal()" class="text-gray-400 hover:text-white">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>

        <div id="personalBoardForm" class="hidden">
            <div class="flex items-center mb-6 p-4 bg-blue-900/20 rounded-xl border border-blue-800">
                <i class="fas fa-user text-2xl text-blue-400 mr-4"></i>
                <div>
                    <h4 class="font-semibold text-white">Personal Board</h4>
                    <p class="text-xs text-gray-400">For individual use - private and solo</p>
                </div>
            </div>
            
            <div class="mb-6">
                <label class="block text-gray-300 text-sm font-medium mb-2">Board Name</label>
                <input type="text" id="personalBoardName" 
                       class="w-full bg-gray-800 border border-gray-700 rounded-xl py-3 px-4 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                       placeholder="e.g., My Tasks, Personal Goals">
            </div>

            <div class="flex space-x-4">
                <button onclick="closeModal()" class="flex-1 py-3 bg-gray-800 hover:bg-gray-700 rounded-xl font-medium transition-colors">
                    Cancel
                </button>
                <button onclick="createBoard('personal')" class="flex-1 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl font-medium text-white transition-colors">
                    Create Board
                </button>
            </div>
        </div>

        <div id="teamBoardForm" class="hidden">
            <div class="flex items-center mb-6 p-4 bg-purple-900/20 rounded-xl border border-purple-800">
                <i class="fas fa-users text-2xl text-purple-400 mr-4"></i>
                <div>
                    <h4 class="font-semibold text-white">Team Board</h4>
                    <p class="text-xs text-gray-400">Collaborate with your team members</p>
                </div>
            </div>
            
            <div class="mb-6">
                <label class="block text-gray-300 text-sm font-medium mb-2">Board Name</label>
                <input type="text" id="teamBoardName" 
                       class="w-full bg-gray-800 border border-gray-700 rounded-xl py-3 px-4 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                       placeholder="e.g., Project Alpha, Marketing Campaign">
            </div>

            <div class="mb-6">
                <label class="block text-gray-300 text-sm font-medium mb-2">Description (Optional)</label>
                <textarea id="teamBoardDescription" rows="3"
                          class="w-full bg-gray-800 border border-gray-700 rounded-xl py-3 px-4 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                          placeholder="What's this board about?"></textarea>
            </div>

            <div class="flex space-x-4">
                <button onclick="closeModal()" class="flex-1 py-3 bg-gray-800 hover:bg-gray-700 rounded-xl font-medium transition-colors">
                    Cancel
                </button>
                <button onclick="createBoard('team')" class="flex-1 py-3 bg-purple-600 hover:bg-purple-700 rounded-xl font-medium text-white transition-colors">
                    Create Board
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .fade-in {
            animation: fadeIn 0.3s ease-out;
        }
        .slide-up {
            animation: slideUp 0.4s ease-out;
        }
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @@keyframes slideUp {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .input-focus:focus {
            border-color: #8ab4f8;
            box-shadow: 0 0 0 3px rgba(138, 180, 248, 0.1);
        }
        .btn-primary {
            background-color: #1a73e8;
            transition: all 0.2s ease;
        }
        .btn-primary:hover {
            background-color: #1666d1;
        }
        .btn-secondary {
            background-color: #2d3748;
            transition: all 0.2s ease;
        }
        .btn-secondary:hover {
            background-color: #4a5568;
        }
        .code-digit {
            width: 50px;
            height: 60px;
            font-size: 18px;
            font-weight: 600;
            text-align: center;
            border-radius: 8px;
            border: 2px solid #374151;
            background-color: #1f2937;
            color: #f8f9fa;
            text-transform: uppercase;
            transition: all 0.2s ease;
        }
        .code-digit:focus {
            border-color: #8ab4f8;
            outline: none;
            box-shadow: 0 0 0 3px rgba(138, 180, 248, 0.1);
        }
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            color: #9ca3af;
            margin: 20px 0;
        }
        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #374151;
        }
        .divider::before {
            margin-right: 15px;
        }
        .divider::after {
            margin-left: 15px;
        }
        .logo-text {
            background: linear-gradient(90deg, #8ab4f8, #1a73e8);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
    </style>
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        let selectedBoardType = '';

        function selectBoardType(type) {
            selectedBoardType = type;
            document.getElementById('boardTypeModal').classList.remove('hidden');
            if (type === 'personal') {
                document.getElementById('modalTitle').textContent = 'Create Personal Board';
                document.getElementById('personalBoardForm').classList.remove('hidden');
                document.getElementById('teamBoardForm').classList.add('hidden');
            } else {
                document.getElementById('modalTitle').textContent = 'Create Team Board';
                document.getElementById('teamBoardForm').classList.remove('hidden');
                document.getElementById('personalBoardForm').classList.add('hidden');
            }
        }

        function closeModal() {
            document.getElementById('boardTypeModal').classList.add('hidden');
            document.getElementById('personalBoardName').value = '';
            document.getElementById('teamBoardName').value = '';
            document.getElementById('teamBoardDescription').value = '';
        }

        function createBoard(type) {
            let boardName, boardDescription = '';

            if (type === 'personal') {
                boardName = document.getElementById('personalBoardName').value;
                if (!boardName) {
                    alert('Please enter a board name');
                    return;
                }
            } else {
                boardName = document.getElementById('teamBoardName').value;
                boardDescription = document.getElementById('teamBoardDescription').value;
                if (!boardName) {
                    alert('Please enter a board name');
                    return;
                }
            }

            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
            if (!token) {
                alert('Security token not found. Please refresh the page.');
                return;
            }

            // ðŸš¨ BU SATIRI KONTROL ET - type deÄŸeri ne geliyor?
            console.log('Board Type:', type);
            console.log('Board Name:', boardName);
            console.log('Board Description:', boardDescription);

            const requestData = {
                Name: boardName,
                Description: boardDescription,
                BoardType: type,
                EnablePassword: false,
                DashboardPassword: null
            };

            console.log('Request Data:', requestData);

            fetch('/Dashboard/CreateBoard', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': token
                },
                body: JSON.stringify(requestData)
            })
                .then(response => {
                    console.log('Response Status:', response.status);
                    return response.json();
                })
                .then(data => {
                    console.log('Response Data:', data);
                    if (data.success) {
                        window.location.href = `/Board/Index/${data.boardId}`;
                    } else {
                        alert('Failed to create board: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to create board. Please try again.');
                });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const joinBtn = document.getElementById('joinBtn');
            const joinForm = document.getElementById('joinForm');
            const backBtn = document.getElementById('backBtn');
            const codeInputs = document.querySelectorAll('.code-digit');
            const enteredCodeSpan = document.getElementById('enteredCode');
            const accessCodeInput = document.getElementById('accessCode');
            const togglePasswordBtn = document.getElementById('togglePassword');
            const dashboardPassword = document.getElementById('Password');
            const joinDashboardForm = document.getElementById('joinDashboardForm');

            if (joinBtn) {
                joinBtn.addEventListener('click', function() {
                    joinBtn.classList.add('hidden');
                    joinForm.classList.remove('hidden');
                    joinForm.classList.add('slide-up');
                    setTimeout(function() {
                        if (codeInputs.length > 0) {
                            codeInputs[0].focus();
                        }
                    }, 100);
                });
            }

            if (backBtn) {
                backBtn.addEventListener('click', function() {
                    joinForm.classList.add('hidden');
                    joinBtn.classList.remove('hidden');
                    codeInputs.forEach(function(input) {
                        input.value = '';
                    });
                    enteredCodeSpan.textContent = '______';
                    accessCodeInput.value = '';
                });
            }

            codeInputs.forEach(function(input, index) {
                input.addEventListener('input', function(e) {
                    if (/^[A-Za-z0-9]$/.test(e.target.value)) {
                        e.target.value = e.target.value.toUpperCase();
                        if (index < codeInputs.length - 1) {
                            codeInputs[index + 1].focus();
                        }
                        updateEnteredCode();
                        updateAccessCodeInput();
                    } else {
                        e.target.value = '';
                    }
                });

                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Backspace') {
                        if (input.value === '' && index > 0) {
                            codeInputs[index - 1].focus();
                        }
                        setTimeout(function() {
                            updateEnteredCode();
                            updateAccessCodeInput();
                        }, 10);
                    }
                    if (e.key === 'ArrowLeft' && index > 0) {
                        codeInputs[index - 1].focus();
                    }
                    if (e.key === 'ArrowRight' && index < codeInputs.length - 1) {
                        codeInputs[index + 1].focus();
                    }
                });
            });

            function updateEnteredCode() {
                let code = '';
                codeInputs.forEach(function(input) {
                    code += input.value || '_';
                });
                enteredCodeSpan.textContent = code;
            }

            function updateAccessCodeInput() {
                let code = '';
                codeInputs.forEach(function(input) {
                    code += input.value;
                });
                accessCodeInput.value = code;
            }

            if (togglePasswordBtn) {
                togglePasswordBtn.addEventListener('click', function() {
                    const type = dashboardPassword.getAttribute('type') === 'password' ? 'text' : 'password';
                    dashboardPassword.setAttribute('type', type);
                    togglePasswordBtn.innerHTML = type === 'password' ? 
                        '<i class="fas fa-eye"></i>' : 
                        '<i class="fas fa-eye-slash"></i>';
                });
            }

            if (joinDashboardForm) {
                joinDashboardForm.addEventListener('submit', function(e) {
                    const code = accessCodeInput.value;
                    if (code.length !== 6) {
                        e.preventDefault();
                        alert('Please enter a valid 6-character access code');
                    }
                });
            }

            updateEnteredCode();
            updateAccessCodeInput();
        });
    </script>
}