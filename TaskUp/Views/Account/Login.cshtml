@* Views/Account/Login.cshtml *@
@model TaskUp.ViewModels.Identity.LoginVM

@{
    ViewData["Title"] = "Sign In";
    Layout = "_LayoutIdentity";
}

<div class="min-h-screen flex items-center justify-center bg-gray-950 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Logo and Header -->
        <div class="text-center">
            <div class="flex justify-center">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-r from-blue-500 to-blue-700 flex items-center justify-center shadow-lg">
                    <i class="fas fa-tasks text-white text-2xl"></i>
                </div>
            </div>
            <h2 class="mt-6 text-3xl font-extrabold text-white">Welcome back to TaskUp</h2>
            <p class="mt-2 text-sm text-gray-400">
                Don't have an account?
                <a asp-action="Register" class="font-medium text-blue-400 hover:text-blue-300 transition-colors">
                    Sign up for free
                </a>
            </p>
        </div>

        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-900/50 border border-green-700 text-green-300 px-6 py-4 rounded-xl text-sm flex items-center">
                <i class="fas fa-check-circle mr-3 text-green-400"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-900/50 border border-red-700 text-red-300 px-6 py-4 rounded-xl text-sm flex items-center">
                <i class="fas fa-exclamation-circle mr-3 text-red-400"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Login Form -->
        <div class="bg-gray-900 rounded-2xl p-8 shadow-2xl">
            <form asp-action="Login" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

                <!-- Email Field -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-300 mb-2">
                        Email Address
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-500"></i>
                        </div>
                        <input asp-for="Email"
                               class="block w-full pl-10 pr-3 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="you@example.com">
                    </div>
                    <span asp-validation-for="Email" class="text-red-400 text-xs mt-1"></span>
                </div>

                <!-- Password Field -->
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-300 mb-2">
                        Password
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-500"></i>
                        </div>
                        <input asp-for="Password"
                               class="block w-full pl-10 pr-10 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="••••••••">
                        <button type="button" onclick="togglePassword()" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <i id="toggleIcon" class="fas fa-eye text-gray-500 hover:text-gray-400"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-red-400 text-xs mt-1"></span>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="RememberMe"
                               class="w-4 h-4 bg-gray-800 border-gray-700 rounded text-blue-600 focus:ring-blue-500 focus:ring-2">
                        <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-400">
                            Remember me
                        </label>
                    </div>
                    <div class="text-sm">
                        <a asp-action="ForgotPassword" class="font-medium text-blue-400 hover:text-blue-300 transition-colors">
                            Forgot password?
                        </a>
                    </div>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all transform hover:scale-[1.02]">
                        <i class="fas fa-sign-in-alt mr-2"></i>
                        Sign In
                    </button>
                </div>
            </form>

            <!-- Demo Credentials -->
            <div class="mt-8 pt-6 border-t border-gray-800">
                <p class="text-xs text-center text-gray-500 mb-4">
                    <i class="fas fa-flask mr-1"></i> Demo Credentials
                </p>
                <div class="grid grid-cols-2 gap-4 text-xs">
                    <div class="bg-gray-800/50 rounded-xl p-3">
                        <p class="text-gray-400">Admin</p>
                        <p class="text-white font-mono mt-1">admin@taskup.com</p>
                        <p class="text-gray-500 mt-1">••••••••</p>
                    </div>
                    <div class="bg-gray-800/50 rounded-xl p-3">
                        <p class="text-gray-400">User</p>
                        <p class="text-white font-mono mt-1">user@taskup.com</p>
                        <p class="text-gray-500 mt-1">••••••••</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center">
            <p class="text-xs text-gray-600">
                By signing in, you agree to our
                <a href="#" class="text-gray-500 hover:text-gray-400">Terms</a>
                and
                <a href="#" class="text-gray-500 hover:text-gray-400">Privacy Policy</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function togglePassword() {
            const passwordInput = document.querySelector('[asp-for="Password"]');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
}