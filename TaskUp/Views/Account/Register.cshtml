@* Views/Account/Register.cshtml *@
@model TaskUp.ViewModels.Identity.RegisterVM

@{
    ViewData["Title"] = "Create Account";
    Layout = "_LayoutIdentity";
}

<div class="min-h-screen flex flex-col items-center justify-center bg-gray-950 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Logo and Header -->
        <div class="text-center">
            <div class="flex justify-center">
                <div class="w-16 h-16 rounded-2xl bg-gradient-to-r from-blue-500 to-blue-700 flex items-center justify-center shadow-lg">
                    <i class="fas fa-tasks text-white text-2xl"></i>
                </div>
            </div>
            <h2 class="mt-6 text-3xl font-extrabold text-white">Create your account</h2>
            <p class="mt-2 text-sm text-gray-400">
                Already have an account?
                <a asp-action="Login" class="font-medium text-blue-400 hover:text-blue-300 transition-colors">
                    Sign in here
                </a>
            </p>
        </div>

        <!-- Alert Messages -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-900/50 border border-red-700 text-red-300 px-6 py-4 rounded-xl text-sm flex items-center">
                <i class="fas fa-exclamation-circle mr-3 text-red-400"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Register Form -->
        <div class="bg-gray-900 rounded-2xl p-8 shadow-2xl">
            <form asp-action="Register" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

                <!-- Name Fields -->
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-300 mb-2">
                            First Name
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-gray-500"></i>
                            </div>
                            <input asp-for="Name"
                                   class="block w-full pl-10 pr-3 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                                   placeholder="John">
                        </div>
                        <span asp-validation-for="Name" class="text-red-400 text-xs mt-1"></span>
                    </div>

                    <div>
                        <label asp-for="Surname" class="block text-sm font-medium text-gray-300 mb-2">
                            Last Name
                        </label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-user text-gray-500"></i>
                            </div>
                            <input asp-for="Surname"
                                   class="block w-full pl-10 pr-3 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                                   placeholder="Doe">
                        </div>
                        <span asp-validation-for="Surname" class="text-red-400 text-xs mt-1"></span>
                    </div>
                </div>

                <!-- Username Field -->
                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-300 mb-2">
                        Username
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-at text-gray-500"></i>
                        </div>
                        <input asp-for="Username"
                               class="block w-full pl-10 pr-3 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="johndoe">
                    </div>
                    <span asp-validation-for="Username" class="text-red-400 text-xs mt-1"></span>
                </div>

                <!-- Email Field -->
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-300 mb-2">
                        Email Address
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-500"></i>
                        </div>
                        <input asp-for="Email"
                               class="block w-full pl-10 pr-3 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="john@example.com">
                    </div>
                    <span asp-validation-for="Email" class="text-red-400 text-xs mt-1"></span>
                </div>

                <!-- Password Field -->
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-300 mb-2">
                        Password
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-500"></i>
                        </div>
                        <input asp-for="Password"
                               type="password"
                               id="passwordInput"
                               class="block w-full pl-10 pr-10 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="••••••••">
                        <button type="button" onclick="togglePassword('passwordInput', 'togglePasswordIcon')" class="absolute inset-y-0 right-0 pr-3 flex items-center focus:outline-none">
                            <i id="togglePasswordIcon" class="fas fa-eye text-gray-500 hover:text-gray-400 transition-colors"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-red-400 text-xs mt-1"></span>
                    <p class="text-xs text-gray-500 mt-2">
                        Password must be at least 6 characters long
                    </p>
                </div>

                <!-- Confirm Password Field -->
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-300 mb-2">
                        Confirm Password
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-500"></i>
                        </div>
                        <input asp-for="ConfirmPassword"
                               type="password"
                               id="confirmPasswordInput"
                               class="block w-full pl-10 pr-10 py-3 bg-gray-800 border border-gray-700 rounded-xl text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="••••••••">
                        <button type="button" onclick="togglePassword('confirmPasswordInput', 'toggleConfirmIcon')" class="absolute inset-y-0 right-0 pr-3 flex items-center focus:outline-none">
                            <i id="toggleConfirmIcon" class="fas fa-eye text-gray-500 hover:text-gray-400 transition-colors"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-red-400 text-xs mt-1"></span>
                </div>

                <!-- Terms Checkbox -->
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        <input id="terms" name="terms" type="checkbox" required
                               class="w-4 h-4 bg-gray-800 border-gray-700 rounded text-blue-600 focus:ring-blue-500 focus:ring-2">
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="terms" class="text-gray-400">
                            I agree to the
                            <a href="#" class="text-blue-400 hover:text-blue-300">Terms of Service</a>
                            and
                            <a href="#" class="text-blue-400 hover:text-blue-300">Privacy Policy</a>
                        </label>
                    </div>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-xl shadow-sm text-sm font-medium text-white bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all transform hover:scale-[1.02]">
                        <i class="fas fa-user-plus mr-2"></i>
                        Create Account
                    </button>
                </div>
            </form>

            <!-- Password Requirements -->
            <div class="mt-8 pt-6 border-t border-gray-800">
                <p class="text-xs text-gray-500 mb-3">
                    <i class="fas fa-shield-alt mr-1"></i> Password must contain:
                </p>
                <div class="grid grid-cols-2 gap-2 text-xs">
                    <div class="flex items-center text-gray-500">
                        <i class="fas fa-check-circle text-gray-600 mr-2"></i>
                        8+ characters
                    </div>
                    <div class="flex items-center text-gray-500">
                        <i class="fas fa-check-circle text-gray-600 mr-2"></i>
                        1 uppercase letter
                    </div>
                    <div class="flex items-center text-gray-500">
                        <i class="fas fa-check-circle text-gray-600 mr-2"></i>
                        1 number
                    </div>
                    <div class="flex items-center text-gray-500">
                        <i class="fas fa-check-circle text-gray-600 mr-2"></i>
                        1 special character
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer - Sayfanın en altında -->
    <div class="w-full max-w-md mt-8 text-center">
        <p class="text-xs text-gray-600">
            By creating an account, you agree to our
            <a href="#" class="text-gray-500 hover:text-gray-400 transition-colors">Terms</a>
            <span class="text-gray-600 mx-1">·</span>
            <a href="#" class="text-gray-500 hover:text-gray-400 transition-colors">Privacy Policy</a>
        </p>
        <p class="text-xs text-gray-700 mt-2">
            © @DateTime.Now.Year TaskUp. All rights reserved.
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(iconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
}