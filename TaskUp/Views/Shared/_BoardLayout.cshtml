@* Views/Shared/_BoardLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskUp</title>
    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- SortableJS for Drag & Drop -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.14.0/Sortable.min.js"></script>
    
    <!-- Board-specific base styles -->
    <style>
        * {
            font-family: 'Inter', sans-serif;
        }
        
        .line-clamp-2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
        }
        
        .drag-drop-container {
            scrollbar-width: thin;
            scrollbar-color: #4b5563 #1f2937;
        }
        
        .drag-drop-container::-webkit-scrollbar {
            width: 6px;
        }
        
        .drag-drop-container::-webkit-scrollbar-track {
            background: #1f2937;
            border-radius: 3px;
        }
        
        .drag-drop-container::-webkit-scrollbar-thumb {
            background: #4b5563;
            border-radius: 3px;
        }
        
        .drag-drop-container::-webkit-scrollbar-thumb:hover {
            background: #6b7280;
        }
        
        .task-card {
            transition: all 0.2s ease;
        }
        
        .task-card.dragging {
            opacity: 0.5;
            transform: rotate(3deg);
        }
        
        .task-card.drag-over {
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
        }
        
        /* Board-specific animations */
        .board-fade-in {
            animation: boardFadeIn 0.3s ease-out;
        }
        
        .board-slide-up {
            animation: boardSlideUp 0.4s ease-out;
        }
        
        @@keyframes boardFadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        @@keyframes boardSlideUp {
            from { 
                opacity: 0;
                transform: translateY(10px);
            }
            to { 
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
    
    @await RenderSectionAsync("BoardStyles", required: false)
</head>
<body class="h-screen flex bg-gray-950 text-gray-100 overflow-hidden">
    <!-- Board Sidebar -->
    <div class="w-16 bg-gray-900 flex flex-col items-center py-6 space-y-8 flex-shrink-0">
        <!-- Logo -->
        <a asp-controller="Dashboard" asp-action="Index" 
           class="w-10 h-10 rounded-lg bg-gradient-to-r from-blue-500 to-blue-700 flex items-center justify-center hover:opacity-90 transition-opacity"
           title="Back to Dashboards">
            <i class="fas fa-tasks text-white text-lg"></i>
        </a>
        
        <!-- Board Navigation -->
        <nav class="flex-1 flex flex-col items-center space-y-6">
            <a href="#" 
               class="board-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
               title="Board">
                <i class="fas fa-columns text-xl"></i>
            </a>
            
            <a asp-controller="Board" asp-action="Members" 
               class="board-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Members" ? "active" : "")"
               title="Members">
                <i class="fas fa-users text-xl"></i>
            </a>
            
            <a asp-controller="Board" asp-action="Settings" 
               class="board-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "active" : "")"
               title="Settings">
                <i class="fas fa-cog text-xl"></i>
            </a>
            
            <a asp-controller="Board" asp-action="Analytics" 
               class="board-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Analytics" ? "active" : "")"
               title="Analytics">
                <i class="fas fa-chart-bar text-xl"></i>
            </a>
        </nav>
        
        <!-- Board Actions -->
        <div class="mt-auto space-y-4">
            <!-- Quick Add -->
            <button id="globalQuickAdd" 
                    class="w-10 h-10 rounded-full bg-blue-600 hover:bg-blue-700 flex items-center justify-center text-white"
                    title="Quick Add">
                <i class="fas fa-plus"></i>
            </button>
            
            <!-- Current User -->
            <div class="relative">
                <div class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center border-2 border-gray-700 cursor-pointer hover:border-gray-600"
                     id="boardUserMenuBtn">
                    <i class="fas fa-user text-gray-400"></i>
                </div>
                
                <!-- User Dropdown -->
                <div id="boardUserDropdown" class="hidden absolute bottom-full mb-2 left-1/2 transform -translate-x-1/2 w-48 bg-gray-900 border border-gray-800 rounded-xl shadow-lg py-1 z-50">
                    <div class="px-4 py-2 border-b border-gray-800">
                        <p class="text-sm font-medium text-white">@User.Identity?.Name</p>
                        <p class="text-xs text-gray-400 truncate">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
                    </div>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-800 hover:text-white">
                        <i class="fas fa-user mr-2"></i>Profile
                    </a>
                    <a href="#" class="block px-4 py-2 text-sm text-gray-300 hover:bg-gray-800 hover:text-white">
                        <i class="fas fa-cog mr-2"></i>Settings
                    </a>
                    <div class="border-t border-gray-800 my-1"></div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="block w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-gray-800 hover:text-red-300">
                            <i class="fas fa-sign-out-alt mr-2"></i>Sign Out
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Board Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Board Header -->
        <header class="bg-gray-900 border-b border-gray-800 px-6 py-4">
            <div class="flex items-center justify-between">
                <!-- Board Title and Info -->
                <div>
                    <h1 class="text-2xl font-bold text-white">@ViewBag.BoardTitle</h1>
                    <div class="flex items-center space-x-4 mt-2 text-sm text-gray-400">
                        <span class="flex items-center">
                            <i class="fas fa-users mr-2"></i>
                            <span>@ViewBag.MemberCount members</span>
                        </span>
                        <span class="flex items-center">
                            <i class="fas fa-code mr-2"></i>
                            <span>@ViewBag.JoinCode</span>
                        </span>
                        @if (!string.IsNullOrEmpty(ViewBag.BoardDescription))
                        {
                            <span class="flex items-center">
                                <i class="fas fa-info-circle mr-2"></i>
                                <span>@ViewBag.BoardDescription</span>
                            </span>
                        }
                    </div>
                </div>
                
                <!-- Board Actions -->
                <div class="flex items-center space-x-4">
                    <!-- Search -->
                    <div class="relative hidden md:block">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <input type="text" 
                               class="bg-gray-800 border border-gray-700 rounded-xl py-2 pl-10 pr-4 text-sm w-64 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500" 
                               placeholder="Search tasks...">
                    </div>
                    
                    <!-- Filter -->
                    <button class="p-2 text-gray-400 hover:text-white hover:bg-gray-800 rounded-xl">
                        <i class="fas fa-filter"></i>
                    </button>
                    
                    <!-- Share/Invite -->
                    <button class="px-4 py-2 bg-gray-800 hover:bg-gray-700 rounded-xl text-sm font-medium flex items-center">
                        <i class="fas fa-share-alt mr-2"></i>
                        Share
                    </button>
                    
                    <!-- Add Column (only for Board/Index) -->
                    @if (ViewContext.RouteData.Values["action"]?.ToString() == "Index")
                    {
                        <button id="addColumnBtn" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-xl text-sm font-medium flex items-center">
                            <i class="fas fa-plus mr-2"></i>
                            Add Column
                        </button>
                    }
                </div>
            </div>
        </header>

        <!-- Board Body -->
        <main class="flex-1 overflow-hidden">
            @RenderBody()
        </main>
        
        <!-- Board Footer (optional) -->
        @if (IsSectionDefined("BoardFooter"))
        {
            @await RenderSectionAsync("BoardFooter", required: false)
        }
    </div>

    <!-- Global Modals (reusable across all board pages) -->
    
    <!-- Quick Add Modal -->
    <div id="quickAddModal" class="fixed inset-0 bg-black/70 flex items-center justify-center z-50 hidden">
        <div class="bg-gray-900 rounded-2xl p-6 w-full max-w-sm mx-4">
            <h3 class="text-lg font-bold text-white mb-4">Quick Add</h3>
            <div class="space-y-3">
                <a href="#" class="block p-4 bg-gray-800 hover:bg-gray-750 rounded-xl text-white flex items-center">
                    <i class="fas fa-plus-circle mr-3 text-blue-400"></i>
                    <div>
                        <p class="font-medium">New Task</p>
                        <p class="text-sm text-gray-400">Add a new task to any column</p>
                    </div>
                </a>
                <a href="#" class="block p-4 bg-gray-800 hover:bg-gray-750 rounded-xl text-white flex items-center">
                    <i class="fas fa-columns mr-3 text-green-400"></i>
                    <div>
                        <p class="font-medium">New Column</p>
                        <p class="text-sm text-gray-400">Add a workflow stage</p>
                    </div>
                </a>
                <a href="#" class="block p-4 bg-gray-800 hover:bg-gray-750 rounded-xl text-white flex items-center">
                    <i class="fas fa-user-plus mr-3 text-purple-400"></i>
                    <div>
                        <p class="font-medium">Invite Member</p>
                        <p class="text-sm text-gray-400">Add people to this board</p>
                    </div>
                </a>
            </div>
            <button id="closeQuickAdd" class="mt-6 w-full py-3 bg-gray-800 hover:bg-gray-700 rounded-xl font-medium">
                Cancel
            </button>
        </div>
    </div>
    
    <!-- Add Column Modal -->
    <div id="addColumnModal" class="fixed inset-0 bg-black/70 flex items-center justify-center z-50 hidden">
        <div class="bg-gray-900 rounded-2xl p-8 w-full max-w-md mx-4">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-xl font-bold text-white">Create New Column</h3>
                <button id="closeColumnModal" class="text-gray-400 hover:text-white">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            
            <form id="createColumnForm">
                <div class="mb-6">
                    <label class="block text-gray-300 mb-2">Column Name</label>
                    <input type="text" 
                           id="columnName"
                           class="w-full bg-gray-800 border border-gray-700 rounded-xl py-3 px-4 text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500 outline-none"
                           placeholder="e.g., In Progress, Review"
                           required>
                </div>
                
                <div class="flex justify-end space-x-4">
                    <button type="button" id="cancelColumnBtn" class="px-6 py-3 bg-gray-800 hover:bg-gray-700 rounded-xl font-medium">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-xl font-medium">
                        Create Column
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Global Scripts -->
    <script>
        // Board Layout JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            // Sidebar navigation active state
            const currentAction = '@ViewContext.RouteData.Values["action"]';
            document.querySelectorAll('.board-nav-item').forEach(item => {
                if (item.classList.contains('active')) {
                    item.classList.add('bg-blue-900/30', 'text-blue-400');
                    item.classList.remove('text-gray-400', 'hover:bg-gray-800', 'hover:text-gray-300');
                } else {
                    item.classList.add('text-gray-400', 'hover:bg-gray-800', 'hover:text-gray-300');
                    item.classList.remove('bg-blue-900/30', 'text-blue-400');
                }
            });
            
            // User dropdown
            const userMenuBtn = document.getElementById('boardUserMenuBtn');
            const userDropdown = document.getElementById('boardUserDropdown');
            
            if (userMenuBtn && userDropdown) {
                userMenuBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('hidden');
                });
                
                document.addEventListener('click', function(e) {
                    if (!userDropdown.contains(e.target) && !userMenuBtn.contains(e.target)) {
                        userDropdown.classList.add('hidden');
                    }
                });
            }
            
            // Quick Add Modal
            const quickAddBtn = document.getElementById('globalQuickAdd');
            const quickAddModal = document.getElementById('quickAddModal');
            const closeQuickAdd = document.getElementById('closeQuickAdd');
            
            if (quickAddBtn && quickAddModal) {
                quickAddBtn.addEventListener('click', () => {
                    quickAddModal.classList.remove('hidden');
                });
                
                closeQuickAdd.addEventListener('click', () => {
                    quickAddModal.classList.add('hidden');
                });
                
                quickAddModal.addEventListener('click', (e) => {
                    if (e.target === quickAddModal) {
                        quickAddModal.classList.add('hidden');
                    }
                });
            }
            
            // Add Column Modal (global)
            const addColumnBtn = document.getElementById('addColumnBtn');
            const addColumnModal = document.getElementById('addColumnModal');
            const closeColumnModal = document.getElementById('closeColumnModal');
            const cancelColumnBtn = document.getElementById('cancelColumnBtn');
            
            if (addColumnBtn && addColumnModal) {
                addColumnBtn.addEventListener('click', () => {
                    addColumnModal.classList.remove('hidden');
                });
            }
            
            if (closeColumnModal) {
                closeColumnModal.addEventListener('click', () => {
                    addColumnModal.classList.add('hidden');
                });
            }
            
            if (cancelColumnBtn) {
                cancelColumnBtn.addEventListener('click', () => {
                    addColumnModal.classList.add('hidden');
                });
            }
            
            if (addColumnModal) {
                addColumnModal.addEventListener('click', (e) => {
                    if (e.target === addColumnModal) {
                        addColumnModal.classList.add('hidden');
                    }
                });
            }
            
            // Board-specific toast function
            window.boardToast = function(message, type = 'info') {
                const toast = document.createElement('div');
                const bgColor = type === 'success' ? 'bg-green-900' : 
                               type === 'error' ? 'bg-red-900' : 
                               type === 'warning' ? 'bg-yellow-900' : 'bg-blue-900';
                
                toast.className = `fixed top-4 right-4 ${bgColor} border border-gray-700 text-white px-6 py-3 rounded-xl shadow-lg z-[100] transform transition-transform duration-300 translate-x-full`;
                toast.innerHTML = `
                    <div class="flex items-center">
                        <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} mr-3"></i>
                        <span>${message}</span>
                    </div>
                `;
                
                document.body.appendChild(toast);
                
                setTimeout(() => {
                    toast.classList.remove('translate-x-full');
                }, 10);
                
                setTimeout(() => {
                    toast.classList.add('translate-x-full');
                    setTimeout(() => {
                        if (toast.parentNode) {
                            document.body.removeChild(toast);
                        }
                    }, 300);
                }, 5000);
                
                toast.addEventListener('click', () => {
                    toast.classList.add('translate-x-full');
                    setTimeout(() => {
                        if (toast.parentNode) {
                            document.body.removeChild(toast);
                        }
                    }, 300);
                });
            };
            
            // Drag & Drop helper functions
            window.initDragDrop = function(containerSelector, itemSelector, onDropCallback) {
                const containers = document.querySelectorAll(containerSelector);
                
                containers.forEach(container => {
                    const items = container.querySelectorAll(itemSelector);
                    
                    items.forEach(item => {
                        item.setAttribute('draggable', 'true');
                        
                        item.addEventListener('dragstart', (e) => {
                            item.classList.add('dragging');
                            e.dataTransfer.setData('text/plain', item.dataset.id || '');
                        });
                        
                        item.addEventListener('dragend', () => {
                            item.classList.remove('dragging');
                        });
                    });
                    
                    container.addEventListener('dragover', (e) => {
                        e.preventDefault();
                        const draggingItem = document.querySelector('.dragging');
                        if (draggingItem) {
                            container.classList.add('drag-over');
                        }
                    });
                    
                    container.addEventListener('dragleave', () => {
                        container.classList.remove('drag-over');
                    });
                    
                    container.addEventListener('drop', (e) => {
                        e.preventDefault();
                        container.classList.remove('drag-over');
                        
                        const itemId = e.dataTransfer.getData('text/plain');
                        if (itemId && onDropCallback) {
                            onDropCallback(itemId, container.dataset.id || '');
                        }
                    });
                });
            };
            
            // Board event listeners cleanup helper
            window.boardCleanup = function() {
                // Clean up any board-specific event listeners if needed
            };
        });
        
        // Clean up on page unload
        window.addEventListener('beforeunload', function() {
            if (typeof boardCleanup === 'function') {
                boardCleanup();
            }
        });
    </script>
    
    <!-- Page-specific scripts -->
    @await RenderSectionAsync("BoardScripts", required: false)
</body>
</html>